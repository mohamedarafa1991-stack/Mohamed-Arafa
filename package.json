
{
  "name": "medcore-pro-desktop",
  "version": "1.0.0",
  "description": "Professional Clinic Management System",
  "main": "electron-main.js",
  "author": "MedCore Software",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "package": "electron-builder build --win --publish never"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "lucide-react": "^0.453.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "recharts": "^2.12.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.2"
  },
  "build": {
    "appId": "com.medcore.pro",
    "productName": "MedCore Pro",
    "directories": {
      "output": "dist-desktop"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MedCore Pro"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ]
  }
}
